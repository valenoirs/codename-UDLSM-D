<div class="row justify-content-center mt-4">
    <h2>Data Anggota</h2>
</div>
<hr>
<div class="row justify-content-center mt-4">
    <div class="col">
      <a href="/admin/anggota/add" class="btn btn-primary">Tambah Anggota</a>
    </div>
    <div class="col">
      <input class="form-control me-2" id="myInput" type="search" onkeyup="myFunction()" placeholder="Search" aria-label="Search">
    </div>
</div>
<div class="row justify-content-center mt-4">
  <table class="table table-striped table-hover" id="myTable">
    <thead class="table-success">
          <tr>
            <th scope="col">#</th>
            <th scope="col">Nama</th>
            <th scope="col">Usia</th>
            <th scope="col">Fakultas</th>
            <th scope="col">More</th>
          </tr>
        </thead>
        <tbody>
            <% dataAnggota.forEach((anggota, i) => { %>
            <tr>
              <th scope="row"><%= i + 1 %> </th>
              <td><%= anggota.nama %> </td>
              <td><%= anggota.usia %> </td>
              <td><%= anggota.fakultas %> </td>
              <td>
                <form method="POST" action="/anggota/delete?_method=DELETE">
                  <input type="hidden" id="angotaId" name="anggotaId" value="<%= anggota.anggotaId %>">
                  <button type="submit" class="btn btn-danger" onclick="return confirm('Are You Sure?')"><i class="bi bi-info-circle"></i> Hapus</button>
                </form>
              </td>
            </tr>
            <% }) %>
          </tbody>
      </table>
</div>