<div class="row justify-content-center mt-4">
    <h2>Data Informasi</h2>
</div>
<hr>
<div class="row justify-content-center mt-4">
    <div class="col">
      <a href="/admin/informasi/add" class="btn btn-primary">Tambah Informasi</a>
    </div>
    <div class="col">
      <input class="form-control me-2" id="myInput" type="search" onkeyup="myFunction()" placeholder="Search" aria-label="Search">
    </div>
</div>
<div class="row justify-content-center mt-4">
  <table class="table table-striped table-hover" id="myTable">
    <thead class="table-success">
          <tr>
            <th scope="col">#</th>
            <th scope="col">UKM</th>
            <th scope="col">Pengumuman</th>
            <th scope="col">Waktu</th>
            <th scope="col">More</th>
          </tr>
        </thead>
        <tbody>
          <% dataInformasi.forEach((informasi, i) => { %>
            <tr>
              <th scope="row"><%= i + 1 %></th>
              <td><%= informasi.nama_ukm %></td>
              <td><%= informasi.pengumuman %></td>
              <td><%= new Date(informasi.updatedAt).toLocaleDateString('en-gb', { year: 'numeric', month: 'long', day: 'numeric'}) %></td>
              <td>
                <form action="/informasi/delete?_method=DELETE" method="POST">
                  <input type="hidden" id="informasiId" name="informasiId" value="<%= informasi.informasiId %>">
                  <button type="submit" class="btn btn-danger" onclick="return confirm('Are You Sure?')"><i class="bi bi-info-circle"></i> Hapus</button>
                </form>
              </td>
            </tr>
          <% }) %>
        </tbody>
      </table>
</div>