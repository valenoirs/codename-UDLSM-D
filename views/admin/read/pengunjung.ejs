<div class="row justify-content-center mt-4">
    <h2>Data Pengunjung</h2>
</div>
<hr>
<div class="row justify-content-center mt-4">
    <div class="col">
    </div>
    <div class="col">
      <div class="col">
        <input class="form-control me-2" id="myInput" type="search" onkeyup="myFunction()" placeholder="Search" aria-label="Search">
      </div>
    </div>
</div>
<div class="row justify-content-center mt-4">
  <table class="table table-striped table-hover" id="myTable">
    <thead class="table-success">
          <tr>
            <th scope="col">#</th>
            <th scope="col">Nama</th>
            <th scope="col">Gender</th>
            <th scope="col">Waktu</th>
            <th scope="col">More</th>
          </tr>
        </thead>
        <tbody>
        <% data.forEach((pengunjung, i) => { %>
            <tr>
              <th scope="row"><%= i+1 %> </th>
              <td><%= pengunjung.nama %> </td>
              <td><%= pengunjung.gender %> </td>
              <td><%= new Date(pengunjung.createdAt).toLocaleDateString('en-gb', { year: 'numeric', month: 'long', day: 'numeric'}) %> </td>
              <td>
                <form method="POST" action="/pengunjung/delete?_method=DELETE">
                  <input type="hidden" id="pengunjungId" name="pengunjungId" value="<%= pengunjung.pengunjungId %>">
                  <button type="submit" class="btn btn-danger" onclick="return confirm('Are You Sure?')"><i class="bi bi-info-circle"></i> Hapus</button>
                </form>
              </td>
            </tr>
            <% }) %>
          </tbody>
      </table>
</div>