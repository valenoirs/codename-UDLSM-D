<div class="container">
    <div class="row">
            <div class="col-6 mt-5">
                <h1>Register</h1>
                <form method="POST" action="/user/register">
                    <div class="mb-3">
                      <label for="email" class="form-label">Email address</label>
                      <div class="row">
                          <input type="text" class="form-control col" placeholder="email" id="email" name="email" aria-describedby="emailHelp" required>
                          <input class="form-control col-4" type="text" placeholder="@unikadelasalle.ac.id" aria-label="Disabled input example" disabled>
                      </div>
                    </div>
                    <div class="mb-3">
                      <label for="username" class="form-label">Full Name</label>
                      <div class="row">
                          <input type="text" class="form-control" placeholder="full name" id="nama" name="nama" required>
                      </div>
                    </div>
                    <div class="mb-3">
                      <label for="gender" class="form-label">Gender</label><br>
                      <input type="radio" id="laki-laki" name="gender" value="Laki-laki" checked>
                      <label for="laki-laki">Laki-laki</label><br>
                      <input type="radio" id="perempuan" name="gender" value="Perempuan">
                      <label for="perempuan">Perempuan</label><br>
                    </div>
                    <div class="mb-3">
                      <label for="status" class="form-label">Status</label><br>
                      <input type="radio" id="mahasiswa" name="status" value="Mahasiswa" checked>
                      <label for="mahasiswa">Mahasiswa</label><br>
                      <input type="radio" id="dosen" name="status" value="Dosen">
                      <label for="dosen">Dosen</label><br>
                    </div>
                    <div class="mb-3">
                      <label for="passowrd" class="form-label">Password</label>
                      <div class="row">
                          <input type="password" class="form-control" placeholder="min 8 characters" id="password" name="password" required>
                      </div>
                    </div>
                    <div class="mb-3">
                      <label for="confirmPassword" class="form-label">Confirm Password</label>
                      <div class="row">
                          <input type="password" class="form-control" placeholder="same with above" id="confirmPassword" name="confirmPassword" required>
                      </div>
                    </div>
                    <button type="submit" class="btn btn-primary mb-3">Register</button>

                    <p class="mb-5">Already have an account? <a href="/login">Log in!</a></p>
                    <input type="hidden" id="admin" name="admin" value="false">
                  </form>
            </div>
    </div>
</div>